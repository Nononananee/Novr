# Environment Configuration untuk Novel RAG API
# Copy file ini ke .env dan sesuaikan dengan kebutuhan

# ================================
# APPLICATION SETTINGS
# ================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# ================================
# SECURITY SETTINGS
# ================================
# WAJIB diubah di production!
SECRET_KEY=dev-secret-key-change-in-production
API_KEY=your-api-key-here

# CORS settings (comma-separated untuk production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# DATABASE SETTINGS
# ================================
# PostgreSQL database URL
DATABASE_URL=postgresql://username:password@localhost:5432/novel_rag

# Neo4j graph database URL
GRAPH_DATABASE_URL=bolt://username:password@localhost:7687

# ================================
# CACHE SETTINGS
# ================================
# Redis URL untuk caching
REDIS_URL=redis://localhost:6379

# Cache settings
ENABLE_CACHING=true
CACHE_TTL=300

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ================================
# CONTENT GENERATION SETTINGS
# ================================
MAX_TOKENS_DEFAULT=500
MAX_TOKENS_LIMIT=4000
MAX_BATCH_SIZE=10
MAX_CONCURRENT_GENERATIONS=3

# ================================
# RETRY SETTINGS
# ================================
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Monitoring interval dalam detik
MONITORING_INTERVAL=30

# ================================
# EXTERNAL SERVICES
# ================================
# OpenAI API Key (jika menggunakan OpenAI)
OPENAI_API_KEY=your-openai-key

# Gemini API Key (jika menggunakan Google Gemini)
GEMINI_API_KEY=your-gemini-key

# Anthropic API Key (jika menggunakan Claude)
ANTHROPIC_API_KEY=your-anthropic-key

# ================================
# VECTOR DATABASE SETTINGS
# ================================
# Qdrant settings (jika menggunakan Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key

# Pinecone settings (jika menggunakan Pinecone)
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=your-pinecone-env

# ================================
# NOVEL-SPECIFIC SETTINGS
# ================================
# Maksimum panjang novel yang bisa diproses (dalam characters)
MAX_NOVEL_LENGTH=1000000

# Embedding model untuk novel content
EMBEDDING_MODEL=text-embedding-3-small

# Default genre untuk novel baru
DEFAULT_NOVEL_GENRE=fiction

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Development-only settings
DEBUG_AGENT_CALLS=false
DEBUG_CACHE_OPERATIONS=false
DEBUG_DATABASE_QUERIES=false

# ================================
# PRODUCTION SETTINGS
# ================================
# Production-only settings (uncomment untuk production)
# FORCE_HTTPS=true
# SESSION_SECURE=true
# COOKIE_SECURE=true

# ================================
# BACKUP & RECOVERY
# ================================
# Backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ================================
# PERFORMANCE TUNING
# ================================
# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Worker settings untuk production
WORKERS=1
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_TIMEOUT=120

# ================================
# FEATURE FLAGS
# ================================
# Feature toggles
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ANALYTICS=false
ENABLE_TELEMETRY=false

# ================================
# EXAMPLE VALUES FOR DEVELOPMENT
# ================================
# Uncomment dan sesuaikan untuk development lokal:

# DATABASE_URL=postgresql://postgres:password@localhost:5432/novel_rag_dev
# GRAPH_DATABASE_URL=bolt://neo4j:password@localhost:7687
# REDIS_URL=redis://localhost:6379/0
# SECRET_KEY=development-secret-key-not-for-production
# API_KEY=dev-api-key-123
# OPENAI_API_KEY=sk-your-openai-key-here
# ENABLE_CACHING=true
# LOG_LEVEL=DEBUG
# DEBUG_AGENT_CALLS=true
